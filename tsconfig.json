{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "verbatimModuleSyntax": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "/*": [
        "*"
      ],
      "~node_modules/*": [
        "../node_modules/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
